datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("ADMIN") // "SUPER_ADMIN", "ADMIN"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shipments Shipment[]
  auditLogs AuditLog[]
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String   // e.g., "CREATE_SHIPMENT", "UPDATE_STATUS"
  entityId  String   // The ID of the shipment or entity affected
  details   String?  // JSON string of details
  
  adminId   String
  admin     User     @relation(fields: [adminId], references: [id])
  
  createdAt DateTime @default(now())
}

model Shipment {
  id             String   @id @default(cuid())
  trackingNumber String   @unique
  senderInfo     String // JSON or text
  receiverInfo   String // JSON or text
  status         String   @default("PENDING") // PENDING, IN_TRANSIT, DELIVERED, RETURNED
  origin         String?
  destination    String?
  estimatedDelivery DateTime?
  
  productDescription String?
  imageUrls        String   @default("[]") // JSON string for SQLite compatibility

  adminId        String
  admin          User @relation(fields: [adminId], references: [id])

  events         ShipmentEvent[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ShipmentEvent {
  id          String   @id @default(uuid())
  shipmentId  String
  shipment    Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
  
  status      String
  location    String
  latitude    Float?   // GPS Latitude
  longitude   Float?   // GPS Longitude
  description String?
  timestamp   DateTime @default(now())
  createdAt   DateTime @default(now())
}
